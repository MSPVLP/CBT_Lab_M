// C# Program to Check whether given Character is Vowel or Not

using System;

public class Skill_Practice_2_a
{
    public static void Main()
    {
        char input_char;
        Console.WriteLine ("Enter a Single Character");
        input_char=char.Parse(Console.ReadLine());
        Console.WriteLine("Given Character is  " + input_char);
         
                // Condition for vowel checking
        if (input_char == 'a' || input_char == 'e' || input_char == 'i' || input_char == 'o' || input_char == 'u' || input_char == 'A' || input_char == 'E' || input_char == 'I' || input_char == 'O' || input_char == 'U')
            Console.WriteLine("Entered Character '" + input_char + "' is Vowel.");
        else
            Console.WriteLine("Entered Character '" + input_char + "' is Not a Vowel.");
        
         
    }
}
